<div class="container mt-4">
    <table class="table table-light">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Giá</th>
                <th scope="col" colspan="2">Mô tả</th>
            </tr>
        </thead>
        <tbody>
            {{#each docs}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.prince}}$</td>
                <td>{{this.description}}</td>
                <td>
                    <a href="../cpanel/update?id={{this._id}}">Edit</a>
                    <a href="../cpanel/delete?id={{this._id}}">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>